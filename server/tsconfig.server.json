{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "../dist",
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "strict": false,
    "target": "es2017"
  },
  "include": ["./src/**/*"]
}
